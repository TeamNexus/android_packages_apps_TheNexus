    <!-- Fragment: Battery -->
    <string name="fragment_battery_max_charging_limit">Maximum Charging-Speed Limit</string>
    <string name="fragment_battery_max_charging_limit_descr">
        Allows you to change the maximum charging-speed limit. The slider is limited to
        the recommended minimal and maximal values. To change the value, you have
        to unplug the charger and replug it
    </string>

    <!-- Fragment: Fingerprint -->
    <string name="fragment_fingerprint_always_on_fp">Enable always-on Fingerprint-Sensor</string>
    <string name="fragment_fingerprint_always_on_fp_descr">
        Enables fingerprint-wakelock so you can unlock the device with the fingerprint-sensor
        even when the screen is turned off.
    </string>

    <!-- Fragment: Power -->
    <string name="fragment_power_profiles">Enable Profiles</string>
    <string name="fragment_power_profiles_descr">
        Allows the power-management to change various system-configurations when the
        power-profile is changed. Useful for normal usage, but should be deactivated if the
        user often customizes the system-settings.
    </string>

    <!-- Fragment: Touchscreens -->
    <string name="fragment_touchscreen_dt2w">Enable Double-Tap to Wake (DT2W)</string>
    <string name="fragment_touchscreen_dt2w_descr">
        Allows you to wake the device by tapping on the turned-off screen twice.
        Warning: Probably destroys deep-sleep and battery!
    </string>

