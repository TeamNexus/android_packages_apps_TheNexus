<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="8dip"
    tools:context="at.lukasberger.android.thenexus.MainActivity">

    <LinearLayout
        android:id="@+id/fragment_updater_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/circular_progress_bar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_updater_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dip"
            android:layout_marginEnd="6dip"
            android:layout_marginBottom="6dip"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dip"
                    android:layout_marginStart="16dip"
                    android:layout_marginEnd="16dip"
                    android:id="@+id/fragment_updates_info_title"
                    android:text="@string/fragment_updates_info_no_infos"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dip"
                    android:layout_marginEnd="16dip"
                    android:id="@+id/fragment_updates_info_subtitle"
                    android:text="@string/fragment_updates_info_no_infos_subtitle"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_updates_download_and_install"
                        android:text="@string/fragment_updates_download_and_install"
                        android:visibility="gone" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_updates_check_for_updates"
                        android:text="@string/fragment_updates_check_for_updates" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--
           Update-Channel
          -->
        <LinearLayout
            android:id="@+id/fragment_updates_testing_ota_channel_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="?android:attr/scrollbarSize">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="6dip"
                android:layout_marginTop="6dip"
                android:layout_marginBottom="6dip"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fragment_updates_testing_ota_channel_title"
                    android:text="@string/fragment_updates_testing_ota_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal" />

                <TextView
                    android:text="@string/fragment_updates_testing_ota_channel_descr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_updates_testing_ota_channel_title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:maxLines="5" />

            </RelativeLayout>

            <Switch
                android:id="@+id/fragment_updates_testing_ota_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:padding="8dip" />

        </LinearLayout>

        <!--
           Backup /system
          -->
        <LinearLayout
            android:id="@+id/fragment_updates_backup_system_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="?android:attr/scrollbarSize">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="6dip"
                android:layout_marginTop="6dip"
                android:layout_marginBottom="6dip"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fragment_updates_backup_system_title"
                    android:text="@string/fragment_updates_backup_system"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal" />

                <TextView
                    android:text="@string/fragment_updates_backup_system_descr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_updates_backup_system_title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:maxLines="5" />

            </RelativeLayout>

            <Switch
                android:id="@+id/fragment_updates_backup_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:padding="8dip" />

        </LinearLayout>

        <!--
           Backup /data
          -->
        <LinearLayout
            android:id="@+id/fragment_updates_backup_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="?android:attr/scrollbarSize">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="6dip"
                android:layout_marginTop="6dip"
                android:layout_marginBottom="6dip"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fragment_updates_backup_data_title"
                    android:text="@string/fragment_updates_backup_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal" />

                <TextView
                    android:text="@string/fragment_updates_backup_data_descr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_updates_backup_data_title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:maxLines="5" />

            </RelativeLayout>

            <Switch
                android:id="@+id/fragment_updates_backup_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:padding="8dip" />

        </LinearLayout>

        <!--
           Backup /boot
          -->
        <LinearLayout
            android:id="@+id/fragment_updates_backup_boot_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="?android:attr/scrollbarSize">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="6dip"
                android:layout_marginTop="6dip"
                android:layout_marginBottom="6dip"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fragment_updates_backup_boot_title"
                    android:text="@string/fragment_updates_backup_boot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal" />

                <TextView
                    android:text="@string/fragment_updates_backup_boot_descr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_updates_backup_boot_title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:maxLines="5" />

            </RelativeLayout>

            <Switch
                android:id="@+id/fragment_updates_backup_boot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:padding="8dip" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>